</head>

<body>
  <div id="wrapper" class="d-flex flex-column min-vh-100">
    <!-- Navigation -->
    <nav class="navbar navbar-expand navbar-dark bg-primary">
      <a class="navbar-brand" href="/dashboard">Helpdesk</a>
      <ul class="navbar-nav ml-auto">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fas fa-user-circle fa-fw"></i> {{user.name}}
          </a>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
            <a class="dropdown-item" href="/logout">Logout</a>
          </div>
        </li>
      </ul>
    </nav>

    <!-- Sidebar -->
    <div class="sidebar bg-light">
      <ul class="navbar-nav">
        <li class="nav-item"><a class="nav-link" href="/dashboard"><i class="fas fa-fw fa-tachometer-alt"></i> Dashboard</a></li>
        <li class="nav-item"><a class="nav-link" href="/open"><i class="fas fa-fw fa-lock-open"></i> Open</a></li>
        <li class="nav-item"><a class="nav-link" href="/solved"><i class="fa fa-fw fa-anchor"></i> Solved</a></li>
        <li class="nav-item"><a class="nav-link" href="/closed"><i class="fa fa-fw fa-times-circle"></i> Closed</a></li>
        <li class="nav-item"><a class="nav-link" href="/pending"><i class="fa fa-fw fa-adjust"></i> Pending</a></li>
        <li class="nav-item"><a class="nav-link" href="/unassigned"><i class="fa fa-fw fa-at"></i> Unassigned</a></li>
        <li class="nav-item"><a class="nav-link" href="/mytickets"><i class="fa fa-fw fa-award"></i> My tickets</a></li>
        <li class="nav-item"><a class="nav-link" href="/team"><i class="fa fa-fw fa-users"></i> Teams</a></li>
        <li class="nav-item"><a class="nav-link" href="/users"><i class="fa fa-fw fa-users"></i> Users</a></li>
      </ul>
    </div>

        <!-- Content Wrapper -->
        <div id="content-wrapper">

          <div class="container-fluid">
              <ol class="breadcrumb">
                  <li class="breadcrumb-item">
                      <a href="#">Dashboard</a>
                  </li>
                  <li class="breadcrumb-item active">My tickets</li>
              </ol>
              <div class="card mb-3">
                  <div class="card-body">
                      <div class="table-responsive">
                          <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                              <thead>
                                  <tr>
                                      <th>Subject</th>
                                      <th>Requester</th>
                                      <th>Team</th>
                                      <th>Status</th>
                                      <th>Requested</th>
                                      <th>Action</th>
                                  </tr>
                              </thead>
                              <tbody>
                                    {{#allTicket}}
                                    <tr>
                                        <td><a href="/ticket-details.php?id={{id}}">{{title}}</a></td>
                                        <td>{{requester.name}}</td>
                                        <td>{{#team}}{{name}}{{/team}}</td>
                                        <td><button class="btn btn-danger">{{status}}</button></td>
                                        <td>{{priority}}</td>
                                        <td>{{#team_member}}{{name}}{{/team_member}}</td>
                                        <td><a href="/ticket-details.php?id={{id}}" class="btn btn-outline-primary btn-sm">View</a></td>
                                    </tr>
                                    {{/allTicket}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-light py-3 text-center" style="padding-left: 0px;">
        <div class="container">
            <p style="margin-left: -290px;">Helpdesk System Â© 2024. All Rights Reserved.</p>
        </div>
