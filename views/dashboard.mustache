<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="Helpdesk Dashboard">
  <meta name="author" content="">

  <title>Helpdesk - Dashboard</title>
  <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link href="vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">
  <link href="views/assets/css/dashboard.css" rel="stylesheet"> <!-- Separate CSS file for custom styles -->
  <link href="views/assets/css/style.css" rel="stylesheet">

  <link href="views/assets/css/navbar.css" rel="stylesheet"> <!-- CSS link for the navbar -->
  <link href="views/assets/css/sidebar.css" rel="stylesheet"> <!-- CSS link for the sidebar -->

  <script src="views/assets/js/scripts.js"></script> 
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="vendor/jquery/jquery.min.js"></script>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

</head>

<body>
  <div id="wrapper" class="d-flex flex-column min-vh-100">
    <!-- Navigation -->
    {{> navbar}} 

    <!-- Sidebar Partial -->
    {{> sidebar}}

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="flex-grow-1">
      <div class="container-fluid d-flex flex-column">
        <ol class="breadcrumb" style="margin-left: 0; padding-left: 15px; max-width: 89%;">
          <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
            <span style="margin-left: 5px;">/ Overview</span> <!-- Added margin to space out the text -->
          </li>
        </ol>

        <div class="d-flex justify-content-start mb-3" style="margin-top: -5px;">
          <a class="btn btn-primary" href="/ticket-form"><i class="fa fa-plus"></i> New Ticket</a>
        </div>

      </div>

      <div class="card mb-3 flex-grow-1" style="padding: 10px; border: 1px solid #ccc; border-radius: 5px; margin-bottom: 20px; margin-left: 20px; max-width: 85%; margin-top: -0px;">

        <div class="card-body">
          <!-- Container for the table -->
          <div class="table-container" style="padding: 10px; border: 1px solid #ccc; border-radius: 5px; margin-bottom: 20px; margin-left: -10px; max-width: 115%; margin-top: -20px">
            <div class="table-responsive">
              <table class="table table-bordered table-sm" id="dataTable" style="width: 100%;" cellspacing="0">
                <thead>
                  <tr>
                    <th>Subject</th>
                    <th>Requester</th>
                    <th>Team</th>
                    <th>Ticket Status</th>
                    <th>Priority</th>
                    <th>Assigned To</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  {{#tickets}}
                  <tr>
                    <td>{{title}}</td>
                    <td>{{requester}}</td>
                    <td>{{team}}</td>
                    <td>{{status}}</td>
                    <td>{{priority}}</td>
                    <td>{{assignedTo}}</td> 
                    <td>
                      <a href="/ticket/{{id}}" class="btn btn-outline-primary btn-sm">View</a>
                      <a href="/ticket/edit/{{id}}" class="btn btn-outline-secondary btn-sm">Edit</a>
                      <a href="/ticket/delete/{{id}}" class="btn btn-outline-danger btn-sm">Delete</a>
                    </td>
                  </tr>
                  {{/tickets}}
                </tbody>                
              </table>
            </div>
          </div>

        </div>
      </div>

      <!-- Footer -->
      <footer class="bg-light py-3 text-center" style="padding-left: 0px;">
        <div class="container">
          <p style="margin-left: -290px;">Helpdesk System Â© 2024. All Rights Reserved.</p>
        </div>
      </footer>

      <!-- Scripts -->
      <script src="vendor/jquery/jquery.min.js"></script>
      <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
      <script src="vendor/jquery-easing/jquery.easing.min.js"></script>
      <script src="vendor/datatables/jquery.dataTables.js"></script>
      <script src="vendor/datatables/dataTables.bootstrap4.js"></script>
      <script src="views/assets/js/dashboard.js"></script>
    </div>
  </div>
</body>

</html>
