<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="Helpdesk Dashboard">
  <meta name="author" content="">

  <title>Helpdesk - Dashboard</title>
  <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link href="vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">
  <link href="views/assets/css/dashboard.css" rel="stylesheet">
  <link href="styles.css" rel="stylesheet"> <!-- Separate CSS file for custom styles -->
  <link href="views/assets/css/style.css" rel="stylesheet">
  <script src="views/assets/js/scripts.js"></script> 
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="vendor/jquery/jquery.min.js"></script>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

</head>

<body>
  <div id="wrapper" class="d-flex flex-column min-vh-100">
    <!-- Navigation -->
    <nav class="navbar navbar-expand navbar-dark bg-primary">
  <a class="navbar-brand" href="/dashboard">Helpdesk</a>
  <ul class="navbar-nav ml-auto">
    <li class="nav-item dropdown">
  <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <i class="fas fa-user-circle fa-fw"></i> {{user.name}}
  </a>
  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
    <a class="dropdown-item" href="/logout">Logout</a>
  </div>
</li>
  </ul>
</nav>

    <!-- Sidebar -->
    <div class="sidebar bg-light">
      <ul class="navbar-nav">
        <li class="nav-item"><a class="nav-link" href="/dashboard"><i class="fas fa-fw fa-tachometer-alt"></i> Dashboard</a></li>
        <li class="nav-item"><a class="nav-link" href="/open"><i class="fas fa-fw fa-lock-open"></i> Open</a></li>
        <li class="nav-item"><a class="nav-link" href="/solved"><i class="fa fa-fw fa-anchor"></i> Solved</a></li>
        <li class="nav-item"><a class="nav-link" href="/closed"><i class="fa fa-fw fa-times-circle"></i> Closed</a></li>
        <li class="nav-item"><a class="nav-link" href="/pending"><i class="fa fa-fw fa-adjust"></i> Pending</a></li>
        <li class="nav-item"><a class="nav-link" href="/unassigned"><i class="fa fa-fw fa-at"></i> Unassigned</a></li>
        <li class="nav-item"><a class="nav-link" href="/mytickets"><i class="fa fa-fw fa-award"></i> My tickets</a></li>
        {{#isAdmin}}
        <li class="nav-item"><a class="nav-link" href="/team"><i class="fa fa-fw fa-users"></i> Teams</a></li>
        <li class="nav-item"><a class="nav-link" href="/users"><i class="fa fa-fw fa-users"></i> Users</a></li>
        {{/isAdmin}}
      </ul>
    </div>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="flex-grow-1">
            <div class="container-fluid">
                <!-- Breadcrumb -->
                <ol class="breadcrumb" style="margin-top: 15px;">
                    <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active">Create Ticket</li>
                </ol>

                <!-- Ticket Form -->
                <h1>Create a Ticket</h1>
                {{#err}} <p style="color: red;">{{err}}</p> {{/err}}
                {{#msg}} <p style="color: green;">{{msg}}</p> {{/msg}}
                
                <form method="POST" action="/ticket-form" class="mt-4">
                    <div class="form-group">
                        <label for="name">Requester Name:</label>
                        <input type="text" class="form-control" name="name" id="name" required>
                    </div>

                    <div class="form-group">
                        <label for="email">Email Address:</label>
                        <input type="email" class="form-control" name="email" id="email" required>
                    </div>

                    <div class="form-group">
                        <label for="phone">Phone Number:</label>
                        <input type="text" class="form-control" name="phone" id="phone" required>
                    </div>

                    <div class="form-group">
                        <label for="subject">Subject:</label>
                        <input type="text" class="form-control" name="subject" id="subject" required>
                    </div>

                    <div class="form-group">
                        <label for="comment">Comment:</label>
                        <textarea class="form-control" name="comment" id="comment" required></textarea>
                    </div>

                    <div class="form-group">
                        <label for="team">Select Team:</label>
                        <select class="form-control" name="team" id="team">
                            <option value="none">Select a team</option>
                            {{#teams}}
                            <option value="{{id}}">{{name}}</option>
                            {{/teams}}
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="priority">Priority:</label>
                        <select class="form-control" name="priority" id="priority">
                            <option value="low">Low</option>
                            <option value="medium">Medium</option>
                            <option value="high">High</option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary" name="submit">Create Ticket</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-light py-3 text-center mt-auto">
        <div class="container">
            <p>Helpdesk System Â© 2024. All Rights Reserved.</p>
        </div>
    </footer>

</body>
</html>
