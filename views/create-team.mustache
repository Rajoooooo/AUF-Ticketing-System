<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="Helpdesk Dashboard">
  <meta name="author" content="">

  <title>Helpdesk - New User</title>
  <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link href="vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">
  <link href="views/assets/css/dashboard.css" rel="stylesheet">
  <link href="styles.css" rel="stylesheet"> <!-- Separate CSS file for custom styles -->
  <link href="views/assets/css/style.css" rel="stylesheet">
  <link href="views/assets/css/navbar.css" rel="stylesheet"> <!-- CSS link for the navbar -->
  <link href="views/assets/css/sidebar.css" rel="stylesheet"> <!-- CSS link for the sidebar -->

  <script src="views/assets/js/scripts.js"></script> 
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="vendor/jquery/jquery.min.js"></script>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

</head>

<body>
  <div id="wrapper" class="d-flex flex-column min-vh-100">
    <!-- Navigation Partial -->
    {{> navbar}}

    <!-- Sidebar Partial -->
    {{> sidebar}}

    <!-- Content Wrapper -->
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="w-100" style="max-width: 600px;">
          <h1 class="text-center">Create a New Team</h1>
          
          <!-- Error and Success Messages -->
          {{#err}} <p class="text-danger text-center">{{err}}</p> {{/err}}
          {{#msg}} <p class="text-success text-center">{{msg}}</p> {{/msg}}
    
          <!-- Form Start -->
          <form method="POST" action="/create-team" class="mt-4">
            <div class="form-group">
              <label for="team-name">Team Name:</label>
              <input type="text" class="form-control" name="team-name" id="team-name" placeholder="Enter team name" required>
            </div>
    
            <button type="submit" class="btn btn-primary btn-block">Create Team</button>
            <button type="button" class="btn btn-danger btn-block" onclick="window.history.back();">Cancel</button>
          </form>
        </div>
      </div>  
    </body>
    
    </html>

