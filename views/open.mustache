<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="Helpdesk Dashboard">
  <meta name="author" content="">

  <title>Helpdesk - Dashboard</title>
  <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link href="/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">
  <link href="/views/assets/css/dashboard.css" rel="stylesheet">
  <link href="/styles.css" rel="stylesheet"> <!-- Separate CSS file for custom styles -->
  <link href="/views/assets/css/style.css" rel="stylesheet">
  <link href="/views/assets/css/navbar.css" rel="stylesheet"> <!-- CSS link for the navbar -->
  <link href="/views/assets/css/sidebar.css" rel="stylesheet"> <!-- CSS link for the sidebar -->

  <script src="/views/assets/js/scripts.js"></script> 
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="/vendor/jquery/jquery.min.js"></script>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</head>

<body>
  <div id="wrapper" class="d-flex flex-column min-vh-100">
    <!-- Navigation Partial -->
    {{> navbar}}

    <!-- Sidebar Partial -->
    {{> sidebar}}

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="flex-grow-1">
      <div class="container-fluid d-flex flex-column">
        <!-- Breadcrumb -->
        <ol class="breadcrumb" style="margin-left: 0; padding-left: 15px; max-width: 85.5%;">
          <li class="breadcrumb-item">
            <a href="/dashboard">Dashboard</a>
            <span style="margin-left: 5px;">/ Open</span>
          </li>
        </ol>

        <!-- Card for Table -->
        <div class="card mb-3 flex-grow-1" style="padding: 10px; border: 1px solid #ccc; border-radius: 5px; margin-bottom: 20px; margin-left: 2px; max-width: 85.5%; margin-top: -0px;">
          <div class="card-body">
            <!-- Table Container -->
            <div class="table-container" style="padding: 10px; border: 1px solid #ccc; border-radius: 5px; margin-bottom: 20px; margin-left: -10px; max-width: 115%; margin-top: -20px">
              <div class="table-responsive">
                <table class="table table-bordered table-sm" id="dataTable" style="width: 100%;" cellspacing="0">
                  <thead>
                    <tr>
                      <th>Subject</th>
                      <th>Requester</th>
                      <th>Team</th>
                      <th>Ticket Status</th>
                      <th>Priority</th>
                      <th>Assigned To</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    {{#allTicket}}
                    <tr>
                      <td><a href="/ticket-details?id={{id}}">{{title}}</a></td>
                      <td>{{requester_name}}</td>
                      <td>{{team_name}}</td>
                      <td><button class="btn btn-primary">{{status}}</button></td>
                      <td>{{priority}}</td>
                      <td>{{assigned_to}}</td>
                      <td>
                        <a href="/ticket-details?id={{id}}" class="btn btn-outline-primary btn-sm">View</a>
                        <a href="/set-ticket/{{ticket_id}}" class="btn btn-outline-secondary btn-sm">Set Ticket</a>
                      </td>
                    </tr>
                    {{/allTicket}}
                  </tbody>
                </table>                
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <footer class="bg-light py-3 text-center">
      <div class="container">
        <p class="mb-0">AUF Helpdesk System Â© 2024. All Rights Reserved.</p>
      </div>
    </footer>
  </div>

  <!-- Bootstrap JavaScript -->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>
  <script src="/vendor/datatables/jquery.dataTables.js"></script>
  <script src="/vendor/datatables/dataTables.bootstrap4.js"></script>
  <script src="/views/assets/js/dashboard.js"></script>
</body>

</html>
